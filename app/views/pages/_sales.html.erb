<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Buyer</th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
    <tr>
      <td><%= link_to sale.book.name, book_path(sale.book) %></td>
      <td><%= time_ago_in_words(sale.created_at) %> ago</td>
      <td><%= sale.buyer.email %></td>
    </tr>
    <% end %>
  </tbody>
</table>
